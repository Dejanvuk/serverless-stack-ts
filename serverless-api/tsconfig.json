{
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "lib": ["dom", "ES2020"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES6",
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
  },
  "include": ["libs/**/*.ts", "tests/**/*.ts", "*.ts"],
  "exclude": [
    "node_modules",
    "prettier.config.js"
  ]
}
